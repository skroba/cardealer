{% extends 'base.html.twig' %}

{% block title %}Addresses index{% endblock %}

{% block body %}
    <h1>Addresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.name }}</td>
                <td>{{ address.surname }}</td>
                <td>{{ address.address }}</td>
                <td>
                        <a class="btn btn-success" href="{{ path('addresses_show', {'id': address.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('addresses_edit', {'id': address.id}) }}">edit</a>
                    </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
