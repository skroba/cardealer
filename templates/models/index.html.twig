{% extends 'base.html.twig' %}

{% block title %}Models index{% endblock %}

{% block body %}
    <h1>Models index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Maker</th>
                <th>Model</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.maker }}</td>
                <td>{{ model.model }}</td>
                <td>
                    <a href="{{ path('models_show', {'id': model.id}) }}">show</a>
                    <a href="{{ path('models_edit', {'id': model.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('models_new') }}">Create new</a>
{% endblock %}
