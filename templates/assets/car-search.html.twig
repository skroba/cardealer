
<form action="/cardealer/public/index.php/cars/search" method="GET">
  <div class="row my-2 py-2">

  <div class="col-sm-4">
     <div class="form-group">
      <select id="maker" class="form-control custom-select-sm" name="maker""
       onChange="getModels(this.value);" onchange="location.reload()">
       {% if app.request.query.get("maker") !='' %} <option value="{{app.request.query.get("maker")}}">{{app.request.query.get("maker")}}</option>{% else %}
        <option value="">Choose maker</option>
           {% endif %}
       
                {% for make in models %}
        <option value="{{ make.maker }}">{{ make.maker }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="row">

      <div class="col-6"><div class="form-group">
      <select id="yearfrom" class="form-control custom-select-sm" name="yearfrom">
       {% if app.request.query.get("yearfrom") !='' %} <option value="{{app.request.query.get("yearfrom")}}">{{app.request.query.get("yearfrom")}}</option>{% else %}
        <option value="">Made After</option>
           {% endif %}
        {% for i in range(2020, 1935) %}
            <option value ="{{i}}">{{i}}</option>
        {% endfor %}
      </select>
    </div>
    </div>
      <div class="col-6"><div class="form-group">
      <select id="yearto" class="form-control custom-select-sm" name="yearto">
       {% if app.request.query.get("yearto") !='' %} <option value="{{app.request.query.get("yearto")}}">{{app.request.query.get("yearto")}}</option>{% else %}
        <option value="">Made Before</option>
           {% endif %}
              {% for i in range(2020, 1935) %}
            <option value="{{i}}">{{i}}</option>
        {% endfor %}
      </select>
    </div></div>

    </div>
     <div class="form-group">
      <select id="mileage" class="form-control  custom-select-sm" name="mileage">

             {% if app.request.query.get("mileage") !='' %} <option value="{{app.request.query.get("mileage")}}">{{app.request.query.get("mileage")}}</option>{% else %}
           {% endif %}


        <option value="">Miles under</option>
        <option value="50000">50000</option>
        <option value="100000">100000</option>
        <option value="150000">150000</option>
        <option value="200000">200000</option>
        <option value="250000">250000</option>
        <option value="300000">300000</option>
      </select>
    </div>
  </div>


  <div class="col-sm-4">
     <div class="form-group">
      <select id="model" class="form-control  custom-select-sm" name="model">
             {% if app.request.query.get("model") !='' %} <option value="{{app.request.query.get("model")}}">{{app.request.query.get("model")}}</option>{% else %}
               <option value="">Model</option>
           {% endif %}

      </select>
    </div>
    <div class="form-group">
      <select id="body" class="form-control  custom-select-sm" name="body">

       {% if app.request.query.get("body") !='' %} <option value="{{app.request.query.get("body")}}">{{app.request.query.get("body")}}</option>{% else %}
        
           {% endif %}
        <option value="">Choose body</option>
        <option value="hatchback">Hatchback</option>
        <option value="estate">Estate</option>
        <option value="limousine">Limousine</option>
        <option value="cabrio">Cabrio</option>
        <option value="suv">Suv</option>
      </select>
    </div>
      <div class="row">
        <div class="col-4"><div class="form-check">
  <input class="form-check-input" type="radio" name="door" id="door" value=""  {% if app.request.query.get("door") == '' %} checked{% endif %}>
  <label class="form-check-label" for="exampleRadios1">
    Door
  </label>
</div></div>
        <div class="col-4"><div class="form-check">
  <input class="form-check-input" type="radio" name="door" id="door" value="2/3" {% if app.request.query.get("door") == '2/3' %} checked{% endif %}>
  <label class="form-check-label" for="exampleRadios1">
    2/3 Door
  </label>
</div></div>
        <div class="col-4"><div class="form-check">
  <input class="form-check-input" type="radio" name="door" id="door" value="4/5" {% if app.request.query.get("door") == '4/5' %} checked{% endif %}>
  <label class="form-check-label" for="exampleRadios1">
    4/5 Door
  </label>
</div></div>
      </div>
  </div>


  <div class="col-sm-4">
     <div class="form-group">
      <input id="price" class="form-control  custom-select-sm" value="{% if app.request.query.get("price") !='' %} {{app.request.query.get("price")}}{% endif %}" name="price" placeholder="Price under">
      </input>
    </div>
    <div class="form-group">
      <select id="fuel" class="form-control custom-select-sm" name="fuel">

             {% if app.request.query.get("fuel") !='' %} <option value="{{app.request.query.get("fuel")}}">{{app.request.query.get("fuel")}}</option>{% else %}

           {% endif %}

        <option value>Fuel</option>
        <option value="gasoline">Gasoline</option>
        <option value="diesel">Diesel</option>
        <option value="lpg">LPG</option>
        <option value="hybrid">Hybrid</option>
        <option value="electro">Electro</option>
      </select>
    </div>
     <button type="submit" class="btn btn-primary btn-sm">Search</button>
  </div>
  </div>
</form>
